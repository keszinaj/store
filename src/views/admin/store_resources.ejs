<%- include('./head_v1') %>
  <main>
    <div class="card--list">
      <!--Add Item-->
      <div class="card card--style">
        <img src="/plus.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <a href="/admin/products/new" class="btn btn-success btn-lg w-100 mx-1"> Add Item </a>
          </div>
        </div>
      </div>
      <!-- Add Item -->
      <% products.forEach(product=> { %>
        <!--Item-->
        <div class="card card--style">
          <% let photoPath='/laptop_img/' + product.Photo_Path + ".webp" %>
            <img src="<%= photoPath %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%= product.Name %>
              </h5>
              <ul class="text-muted p-0" style="list-style-type: none; font-size: 0.8rem;">
                <li>
                  CPU: <%= product.CPU %>
                </li>
                <li>
                  Memory: <%= product.Memory %>
                </li>
                <li>
                  Graphics: <%= product.Graphics %>
                </li>
                <li>
              </ul>
              <div class="d-flex justify-content-between align-items-center">
                <% let ref='/admin/products/' + product.ID %>
                  <a href="<%= ref %>" class="btn btn-outline-info w-50 mx-1"> Show </a>
                  <a href="/admin/products/edit/<%= product.ID %>" class="btn btn-outline-success w-50 mx-1"> Edit </a>
                  <button type="button" class="btn btn-outline-danger w-50 mx-1"> Delete </button>
              </div>
            </div>
        </div>
        <% }); %>
    </div>

  </main>
  <%- include('./footer') %>